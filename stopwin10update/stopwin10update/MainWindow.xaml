<Window x:Class="stopwin10update.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:stopwin10update"
        mc:Ignorable="d"
        Title="Irantutors.com" Height="200" Width="350" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="34*"></RowDefinition>
            <RowDefinition Height="34*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Foreground="Black" FontSize="18" FontFamily="Times New Roman" HorizontalAlignment="Center"  Width="194">Stop Windows 10 Update</Label>
        <Label Name="lblstatus" Grid.Row="1" Foreground="Green" FontSize="18" FontFamily="Times New Roman" HorizontalAlignment="Center" Margin="140,0" Width="64">Status :</Label>
        <Button Grid.Row="2" Name="btnStop" Click="btnStop_Click">Stop The Service</Button>
        <Label Grid.Row="3" Foreground="Black" FontSize="8" FontFamily="Times New Roman" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" Width="194">Run Me As Administrator</Label>

    </Grid>
</Window>

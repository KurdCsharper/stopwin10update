<Window x:Class="stopwin10update.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:stopwin10update"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Foreground="Green" FontSize="18" FontFamily="Times New Roman" HorizontalAlignment="Center">Stop Windows 10 Update</Label>
        <Label Name="lblstatus" Grid.Row="1" Foreground="Green" FontSize="18" FontFamily="Times New Roman" HorizontalAlignment="Center">Status :</Label>
        <Button Grid.Row="2" Height="50" Name="btnStop" Click="btnStop_Click" Width="300">Stop The Service</Button>
    </Grid>
</Window>
